<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MauiAppFlix.Categorias.AnimationCategory"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Animation"
    BackgroundColor="Black">
    <VerticalStackLayout>
        <ScrollView>
            <Grid
                Padding="5"
                ColumnDefinitions="300, 300"
                RowDefinitions="500, 500">
                <ImageButton
                    x:Name="btnBen10"
                    Grid.Row="0"
                    Grid.Column="0"
                    Aspect="AspectFill"
                    Source="anm_ben10.jpg" />
                <ImageButton
                    x:Name="btnDannyPhantom"
                    Grid.Row="0"
                    Grid.Column="1"
                    Aspect="AspectFill"
                    Source="anm_dannyphantom.jpg" />
                <ImageButton
                    x:Name="btnDragonBallZ"
                    Grid.Row="1"
                    Grid.Column="0"
                    Aspect="AspectFill"
                    Source="anm_dragonballz.jpg" />
                <ImageButton
                    x:Name="btnOnePiece"
                    Grid.Row="1"
                    Grid.Column="1"
                    Aspect="AspectFill"
                    Source="anm_onepiece.jpg" />
            </Grid>
        </ScrollView>
    </VerticalStackLayout>
</ContentPage>