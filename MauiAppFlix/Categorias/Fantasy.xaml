<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MauiAppFlix.Categorias.Fantasy"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Fantasy"
    BackgroundColor="Black">
    <VerticalStackLayout>
        <ScrollView>
            <Grid
                Padding="5"
                ColumnDefinitions="300, 300"
                RowDefinitions="500, 500">
                <ImageButton
                    x:Name="btnAvatar"
                    Grid.Row="0"
                    Grid.Column="0"
                    Aspect="AspectFill"
                    Source="faa_avatar.jpg" />
                <ImageButton
                    x:Name="btnDune"
                    Grid.Row="0"
                    Grid.Column="1"
                    Aspect="AspectFill"
                    Source="faa_dune.jpg" />
                <ImageButton
                    x:Name="btnHobbit"
                    Grid.Row="1"
                    Grid.Column="0"
                    Aspect="AspectFill"
                    Source="faa_hobbit.jpg" />
                <ImageButton
                    x:Name="btnTheLordOfTheRings"
                    Grid.Row="1"
                    Grid.Column="1"
                    Aspect="AspectFill"
                    Source="faa_thelordoftherings.jpg" />
            </Grid>
        </ScrollView>
    </VerticalStackLayout>
</ContentPage>