<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MauiAppFlix.Categorias.War"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="War"
    BackgroundColor="Black">
    <VerticalStackLayout>
        <ScrollView>
            <Grid
                Padding="5"
                ColumnDefinitions="300, 300"
                RowDefinitions="500, 500">

                <ImageButton
                    x:Name="btnIronHeart"
                    Grid.Row="0"
                    Grid.Column="0"
                    Aspect="AspectFill"
                    Source="war_ironheart.jpg" />
                <ImageButton
                    x:Name="btnOppenheimer"
                    Grid.Row="0"
                    Grid.Column="1"
                    Aspect="AspectFill"
                    Source="war_oppenheimer.jpg" />
                <ImageButton
                    x:Name="btnPearlHarbor"
                    Grid.Row="1"
                    Grid.Column="0"
                    Aspect="AspectFill"
                    Source="war_pearlharbor.jpg" />
                <ImageButton
                    x:Name="btnSavingPrivateRyan"
                    Grid.Row="1"
                    Grid.Column="1"
                    Aspect="AspectFill"
                    Source="war_savingprivateryan.jpg" />
            </Grid>
        </ScrollView>
    </VerticalStackLayout>
</ContentPage>