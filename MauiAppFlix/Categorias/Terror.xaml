<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MauiAppFlix.Categorias.Terror"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Terror"
    BackgroundColor="Black">
    <VerticalStackLayout>
        <ScrollView>
            <Grid
                Padding="5"
                ColumnDefinitions="300, 300"
                RowDefinitions="500, 500">
                <ImageButton
                    x:Name="btnAnabelle"
                    Grid.Row="0"
                    Grid.Column="0"
                    Aspect="AspectFill"
                    Source="trr_anabelle.jpg" />
                <ImageButton
                    x:Name="btnChucky"
                    Grid.Row="0"
                    Grid.Column="1"
                    Aspect="AspectFill"
                    Source="trr_chucky.jpg" />
                <ImageButton
                    x:Name="btnBabadook"
                    Grid.Row="1"
                    Grid.Column="0"
                    Aspect="AspectFill"
                    Source="trr_babadook.jpg" />
                <ImageButton
                    x:Name="btnHalloween"
                    Grid.Row="1"
                    Grid.Column="1"
                    Aspect="AspectFill"
                    Source="trr_halloween.jpg" />
            </Grid>
        </ScrollView>
    </VerticalStackLayout>
</ContentPage>